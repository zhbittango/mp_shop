<!-- pages/category/index.wxml -->
<view class="category">
  <w-search-input />
  <view class="container">
    <scroll-view class="left" scroll-y>
      <block wx:for="{{leftList}}" wx:key="cat_id">
        <view class="{{currentIndex === index ? 'active' : ''}}" bind:tap="cateClick" data-index="{{index}}">
          {{item}}
        </view>
      </block>
    </scroll-view>
    <scroll-view class="right" scroll-y scroll-top="{{top}}">
      <block wx:for="{{rightList}}" wx:for-item="item1" wx:for-index="index1" wx:key="cat_id">
        <view class="title">
          <text class="tab">/</text>
          {{item1.cat_name}}
          <text class="tab">/</text>
        </view>
        <view class="list">
          <navigator wx:for="{{item1.children}}" wx:for-item="item2" wx:for-index="index2" wx:key="cat_id">
            <image mode="widthFix" src="{{item2.cat_icon}}" />
            <view>{{item2.cat_name}}</view>
          </navigator>
        </view>
      </block>
    </scroll-view>
  </view>
</view>