page {
  background-color: #eee;
}
.head {
  position: relative;
  height: 45vh;
}
.head .bgImg {
  height: 100% !important;
  filter: blur(2px);
  background-image: linear-gradient(135deg, var(--color-text), var(--color-theme));
}
.head .userinfo {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  color: #fff;
}
.head .userinfo image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0 0 1px rgba(0, 0, 0, 0.2);
}
.head .userinfo .name {
  margin-top: 30rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.head .userinfo button {
  margin-top: 50rpx;
  color: #fff !important;
  padding: 10rpx 25rpx;
  border: 1px solid #fff !important;
}
.contain {
  padding-bottom: 60rpx;
  position: absolute;
  width: 95%;
  top: 40vh;
  left: 50%;
  transform: translateX(-50%);
}
.contain .wrap {
  padding: 16rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  display: flex;
}
.contain .wrap .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.contain .wrap .item .text {
  color: var(--color-theme);
}
.contain .order .title {
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
  background-color: #fff;
}
.contain .content-title {
  padding: 16rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.contain .content {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.contain .content .contact-wrap {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}
.contain .content .feekback {
  border-bottom: 1px solid #ccc;
  position: relative;
}
.contain .content .feekback button {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.contain .content .title {
  padding: 16rpx;
}
