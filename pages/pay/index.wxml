<view class="address">
  <!-- 收货地址 -->
  <view class="user-info">
    <view class="address-info">
      <!-- 用户姓名 -->
      <view class="name">{{address.userName}}</view>
      <!-- 详细地址 -->
      <view class="address">{{address.all}}</view>
    </view>
    <!-- 联系方式 -->
    <view class="phone">{{address.telNumber}}</view>
  </view>
</view>
<!-- 购物车 -->
<view class="cart-content">
  <view class="title">购物车</view>
  <!-- 购物车列表 -->
  <view class="cart-list" wx:for="{{cart}}" wx:key="goods_id">
    <!-- 图片 -->
    <navigator>
      <image mode="widthFix" src="{{item.goods_small_logo}}" />
    </navigator>
    <!-- 商品内容 -->
    <view class="content">
      <!-- 名称 -->
      <navigator class="name">{{item.goods_name}}</navigator>
      <view class="price-wrap">
        <!-- 价格 -->
        <view class="price">￥{{item.goods_price}}</view>
        <!-- 数量 -->
        <view class="num-wrap">
          <view class="num-edit num">x {{item.num}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
<view class="footer-tool">
  <view class="price-wrap">
    <text>合计：</text>
    <text class="price">￥{{totalPrice}}</text>
    <view>包含运费</view>
  </view>
  <view class="pay" bind:tap="">支付({{totalNum}})</view>
</view>